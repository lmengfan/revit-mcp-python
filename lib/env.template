# Civil3D Connector Environment Configuration
# Copy this file to .env and fill in your actual values
# DO NOT commit .env file to version control

# =============================================================================
# APS (Autodesk Platform Services) OAuth Configuration
# =============================================================================
# Get these values from your APS application at https://aps.autodesk.com/myapps/

# Your APS application Client ID
APS_CLIENT_ID=<fill in here>

# Your APS application Client Secret
APS_CLIENT_SECRET=<fill in here>

# OAuth callback URL (must match your APS app configuration)
APS_CALLBACK_URL=<your_backup_callback_url>

# OAuth callback URL LOCAL(must match your APS app configuration)
APS_CALLBACK_URL_LOCAL=http://localhost:8082/callback/

# OAuth scopes (space-separated list)
APS_SCOPES=viewables:read data:read data:write data:create data:search bucket:create bucket:read bucket:update bucket:delete

# =============================================================================
# APS Staging (Autodesk Platform Services) OAuth Configuration
# =============================================================================
# Get these values from your APS application at https://aps.autodesk.com/myapps/

# Your APS application Client ID
APS_STG_CLIENT_ID=<fill in here>

# Your APS application Client Secret
APS_STG_CLIENT_SECRET= <fill in here>

# OAuth callback URL (must match your APS app configuration)
APS_STG_CALLBACK_URL=http://localhost:8083/callback/ 

# OAuth callback URL LOCAL(must match your APS app configuration)
APS_STG_CALLBACK_URL_LOCAL=http://localhost:8083/callback/

# OAuth scopes (space-separated list)
APS_STG_SCOPES=viewables:read data:read data:write data:create data:search bucket:create bucket:read bucket:update bucket:delete

# =============================================================================
# API Endpoints (usually don't need to change these)
# =============================================================================

# APS OAuth authorization endpoint
APS_AUTH_URL=https://developer.api.autodesk.com/authentication/v2/authorize

# APS OAuth token endpoint
APS_TOKEN_URL=https://developer.api.autodesk.com/authentication/v2/token

# APS base API URL
APS_BASE_URL=https://developer.api.autodesk.com

# =============================================================================
# API Staging Endpoints (usually don't need to change these)
# =============================================================================

# APS OAuth authorization endpoint
APS_STG_AUTH_URL=https://developer-stg.api.autodesk.com/authentication/v2/authorize

# APS OAuth token endpoint
APS_STG_TOKEN_URL=https://developer-stg.api.autodesk.com/authentication/v2/token

# APS base API URL
APS_STG_BASE_URL=https://developer-stg.api.autodesk.com


# =============================================================================
# ATF Configuration
# =============================================================================

# ATF library path (if different from default)
ATF_LIBRARY_PATH=D:\git_adsk\atf\x64\Bin\Debug\

# Default ATF export format (dx, aecdm)
DEFAULT_ATF_FORMAT=dx

# DX export environment (prod, stg)
DX_ENVIRONMENT = prod
LOG_DUMP_PATH = Log\fdxConsumer_log.json

# DX Config path
ATF_XLAYER_DX_ACC_CONFIG_JSON_STG = Resources\AccConfig_stg.json
ATF_XLAYER_DX_ACC_CONFIG_JSON_PROD = Resources\AccConfig_prod.json


# =============================================================================
# Network Configuration
# =============================================================================

# HTTP request timeout in seconds
HTTP_TIMEOUT_SECONDS=30

# Maximum retry attempts for failed requests
MAX_RETRY_ATTEMPTS=3

# Retry delay in milliseconds
RETRY_DELAY_MS=1000

# =============================================================================
# Python Env
# =============================================================================

# Control if MCP tool has access to file system
MCP_PYTHON_ALLOW_SYSTEM_ACCESS=true

# Python directory for python files
MCP_PYTHON_WORKING_DIR=C:\repo\AssistantDesktop\saves

